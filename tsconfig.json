{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"outDir": "out",
		"lib": [
			"ES2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"removeComments": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"scripts"
	]
}
